<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<include file="pp:vod_title_play" />
<include file="pp:style_header" />
</head>
<body>
<div class="wrap">
    <include file="pp:header" />
</div>
<div class="player">
    <ul><li class="left">{$vod_player}</li><li class="right"></li></ul>
</div>
<div class="wrap">
	<div class="play960">{:getadsurl('play960')}</div>
    <if condition="C(url_html) eq 0">
    <volist name="vod_playlist" id="ppvod">
    <eq name="ppvod.playname" value="$vod_playname"><div class="box2">
        <h3><div><span><a href="{:UU('Home-gb/show',array(id=>$vod_id),false,true)}" target="_blank">报错</a></span><a href="{$vod_playurl}">播放来源：{$ppvod.playername}</a></div></h3>
        <div class="playlist"><volist name="ppvod['son']" id="ppvodson"><a href="{$ppvodson.playurl}" <eq name="ppvodson.playpath" value="$vod_playpath">class="on"</eq>>{$ppvodson.playname}</a></volist></div>
    </div>
    </eq></volist>
    </if>
    <div class="box2 vod_hot">
        <h3><div><a href="{$vod_playurl}">{$list_name}排行榜</a></div></h3>
        <ul class="hot wbox"><php>$hot_week = ff_mysql_vod('cid:'.$list_id.';limit:14;order:vod_hits_month desc,vod_addtime desc');</php>
        <volist name="hot_week" id="ppvod"><li><p><a href="{$ppvod.vod_readurl}"><img class="lazy" data-original="{$ppvod.vod_picurl}" src="{$tpl}/style/images/js/blank.png" alt="{$ppvod.vod_name}" /></a></p><h4 class="space"><a href="{$ppvod.vod_readurl}">{$ppvod.vod_name|msubstr=0,12}</a></h4></li></volist></ul>
    </div>   
    <div class="blank"></div>
    <include file="pp:footer" />  
</div>
</body>
</html>